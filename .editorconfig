root = true

[*]
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.{js,css,scss}]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true
max_line_length = 120

[*.html]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true
